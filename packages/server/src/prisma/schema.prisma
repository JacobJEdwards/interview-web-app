generator client {
    provider = "prisma-client-js"
    output   = "../../types/generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    STUDENT
    TEACHER
    ADMIN
}

model User {
    id       Int       @id @default(autoincrement())
    email    String    @unique
    name     String
    role     Role
    password String
    modules  Module[]
    projects Project[]
}

model Admin {
    id    Int    @id @default(autoincrement())
    email String @unique
    name  String
}

model Project {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    module      Module @relation(fields: [moduleId], references: [id])
    moduleId    Int
    teacher     User   @relation(fields: [teacherId], references: [id])
    teacherId   Int
}

model Module {
    id        Int       @id @default(autoincrement())
    name      String
    Projects  Project[]
    Teacher   User      @relation(fields: [teacherId], references: [id])
    teacherId Int
}
