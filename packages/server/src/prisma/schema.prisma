generator client {
    provider = "prisma-client-js"
    output   = "../../types/generated/client"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Student {
    id       Int       @id @default(autoincrement())
    email    String    @unique
    name     String
    modules  Module[]
    projects Project[]
    password String
}

model Teacher {
    id       Int       @id @default(autoincrement())
    email    String    @unique
    name     String
    modules  Module[]
    projects Project[]
    password String
}

model Admin {
    id    Int    @id @default(autoincrement())
    email String @unique
    name  String
}

model Project {
    id          Int       @id @default(autoincrement())
    name        String
    description String
    module      Module    @relation(fields: [moduleId], references: [id])
    moduleId    Int
    students    Student[]
    teacher     Teacher   @relation(fields: [teacherId], references: [id])
    teacherId   Int
}

model Module {
    id        Int       @id @default(autoincrement())
    name      String
    Projects  Project[]
    Students  Student[]
    Teacher   Teacher   @relation(fields: [teacherId], references: [id])
    teacherId Int
}
