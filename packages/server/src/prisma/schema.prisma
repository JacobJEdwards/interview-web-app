generator client {
    provider = "prisma-client-js"
    output   = "../../types/generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int       @id @default(autoincrement())
    email        String    @unique
    name         String
    role         Role
    password     String
    ownedModules Module[]  @relation("TeacherModules")
    projects     Project[]
    modules      Module[]  @relation("StudentModules")
}

model Admin {
    id    Int    @id @default(autoincrement())
    email String @unique
    name  String
}

model Project {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    moduleId    Int
    teacherId   Int
    module      Module @relation(fields: [moduleId], references: [id])
    teacher     User   @relation(fields: [teacherId], references: [id])
}

model Module {
    id          Int       @id @default(autoincrement())
    name        String
    description String
    teacherId   Int
    teacher     User      @relation("TeacherModules", fields: [teacherId], references: [id])
    Projects    Project[]
    Students    User[]    @relation("StudentModules")
}

enum Role {
    STUDENT
    TEACHER
    ADMIN
}
