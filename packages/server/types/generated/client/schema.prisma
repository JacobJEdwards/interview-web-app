generator client {
    provider = "prisma-client-js"
    output   = "../../types/generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                Int                 @id @default(autoincrement())
    email             String              @unique
    name              String
    role              Role
    password          String
    ownedModules      Module[]            @relation("TeacherModules")
    modules           Module[]            @relation("StudentModules")
    StudentSubmission StudentSubmission[]
    studentProjects   Project[]           @relation("StudentProjects")
}

model Admin {
    id    Int    @id @default(autoincrement())
    email String @unique
    name  String
}

model Project {
    id                Int                 @id @default(autoincrement())
    name              String
    description       String
    moduleId          Int
    module            Module              @relation(fields: [moduleId], references: [id])
    students          User[]              @relation("StudentProjects")
    filePath          String?
    StudentSubmission StudentSubmission[]
}

model StudentSubmission {
    id        Int     @id @default(autoincrement())
    studentId Int
    projectId Int
    student   User    @relation(fields: [studentId], references: [id])
    project   Project @relation(fields: [projectId], references: [id])
    filePath  String
}

model Module {
    id          Int       @id @default(autoincrement())
    name        String
    description String
    teacherId   Int
    teacher     User      @relation("TeacherModules", fields: [teacherId], references: [id])
    Projects    Project[]
    Students    User[]    @relation("StudentModules")
}

enum Role {
    STUDENT
    TEACHER
    ADMIN
}
